<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_width="1100px"
            android:layout_height="150px"
            android:id="@+id/task_announcement_label"
            android:background="#CE020A" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/back"
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@drawable/back_click">
            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:background="@drawable/icon_to_left"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入驻自媒体"
            android:textColor="#FFFFFF"
            android:textSize="55px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下面是随机生成的验证码"
            android:textSize="50px"
            android:textColor="#141414"
            android:textIsSelectable="true"
            android:layout_marginLeft="40px"
            android:layout_marginTop="50px"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="40px">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:orientation="vertical"
            android:id="@+id/view"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/enter_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99999999999999999999"
                android:background="@null"
                android:layout_gravity="center"
                android:textColor="#3c3c3c"/>
            <View
                android:layout_width="700px"
                android:layout_height="2px"
                android:background="#e9e9e9"
                android:layout_below="@+id/enter_code"
                android:layout_marginTop="20px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:id="@+id/reget_code"
            android:layout_width="wrap_content"
            android:layout_height="95px"
            android:text="重新获取"
            android:layout_toEndOf="@+id/view"
            android:layout_marginLeft="30px"
            android:background="@drawable/button_color"
            android:textColor="#ffffff"
            android:textSize="40px"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="#e9e9e9"
        android:layout_below="@+id/enter_code"
        android:layout_marginTop="60px"/>
    <EditText
        android:id="@+id/enter_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="把上面的验证码替换掉您公众号一篇文章的标题里，保存之后预览出来的链接复制到这里"
        android:background="@null"
        android:layout_marginTop="80px"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="#efefef"
        android:layout_below="@+id/enter_code"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="10px"/>
    <Button
        android:id="@+id/course"
        android:layout_width="850px"
        android:layout_height="120px"
        android:background="@drawable/button_color_enter"
        android:textColor="#ffffff"
        android:textSize="50px"
        android:layout_gravity="center"
        android:text="看教程"
        android:layout_marginTop="120px"/>
    <Button
        android:id="@+id/next"
        android:layout_width="850px"
        android:layout_height="120px"
        android:background="@drawable/button_color"
        android:textColor="#ffffff"
        android:textSize="50px"
        android:layout_gravity="center"
        android:text="下一步"
        android:layout_marginTop="50px"/>
</com.zhy.autolayout.AutoLinearLayout>