<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfd">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="160px"
        android:background="#ce020a">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/drawer_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginLeft="40px">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/icon_circle"
                />
            <ImageView
                android:layout_width="80px"
                android:layout_height="70px"
                android:background="@drawable/icon_me"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@drawable/logo"
            android:layout_marginTop="12px"
            android:layout_centerHorizontal="true"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="15px"
                android:layout_height="15px"
                android:background="@drawable/icon_dot"
                android:layout_marginTop="15px"
                android:layout_marginLeft="60px"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/icon_circle"
                />
            <ImageView
                android:layout_width="55px"
                android:layout_height="60px"
                android:background="@drawable/icon_news"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/id_switch_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_main_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main_recommend"
                android:layout_width="150px"
                android:layout_height="100px"
                android:gravity="center"
                android:text="推荐"
                android:textColor="#e71f19"
                android:textSize="50px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_main_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:saveEnabled="false" >

            <TextView
                android:id="@+id/tv_main_industry"
                android:layout_width="150px"
                android:layout_height="100px"
                android:gravity="center"
                android:text="行业"
                android:textColor="#858484"
                android:textSize="50px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_main_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_main_region"
                android:layout_width="150px"
                android:layout_height="100px"
                android:gravity="center"
                android:text="地区"
                android:textColor="#858484"
                android:textSize="50px" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_main_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main_school"
                android:layout_width="150px"
                android:layout_height="100px"
                android:gravity="center"
                android:text="学校"
                android:textColor="#858484"
                android:textSize="50px" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_main_dry_cargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main_dry_cargo"
                android:layout_width="150px"
                android:layout_height="100px"
                android:gravity="center"
                android:text="干货"
                android:textColor="#858484"
                android:textSize="50px" />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="3px"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:background="#F3F3F3"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="160px"
            android:layout_height="100px"
            android:id="@+id/main_search">
        <ImageView
            android:layout_width="110px"
            android:layout_height="65px"
            android:src="@drawable/icon_search"
            android:layout_marginLeft="8px"
            android:layout_marginTop="20px"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/main_tab"
        android:layout_width="180px"
        android:layout_height="8px"
        android:contentDescription="tab"
        android:background="@drawable/tab_selected_pressed_holo" >
    </ImageView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#efefef"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>
</com.zhy.autolayout.AutoLinearLayout>