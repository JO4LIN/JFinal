<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/init_task"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/init_pic_task"
            android:layout_width="530px"
            android:layout_height="530px"
            android:background="@drawable/init_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主人还没有广告任务，加油啊！"
            android:textColor="#767676"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/init_pic_task"
            android:textSize="55px"
            android:layout_marginTop="50px"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/init_indent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/init_pic_indent"
            android:layout_width="530px"
            android:layout_height="530px"
            android:background="@drawable/init_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主人还没有自媒体订单，加油啊！"
            android:textColor="#767676"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/init_pic_indent"
            android:textSize="55px"
            android:layout_marginTop="50px"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/init_collect"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/init_pic_collect"
            android:layout_width="530px"
            android:layout_height="530px"
            android:background="@drawable/init_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主人还没有收藏，赶紧收藏吧！"
            android:textColor="#767676"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/init_pic_collect"
            android:textSize="55px"
            android:layout_marginTop="50px"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.shengrui.huilian.refresh_listview.RefreshListView
        android:divider="#f5f5f5"
        android:dividerHeight="5px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accomplish_task_listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"/>
</com.zhy.autolayout.AutoLinearLayout>