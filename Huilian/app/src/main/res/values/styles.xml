<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="btn_background" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_background_shape_sel</item>
        <item name="android:textColor">@drawable/btn_txt_color_sel</item>

    </style>


    <style name="PersonalLine">
        <item name="android:background">#fcececec</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">5px</item>
    </style>

    <style name="PersonalMainLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15px</item>
        <item name="android:background">@drawable/background_corners</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="PersonalTopStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">110px</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="PersonalTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">115px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">45px</item>
        <item name="android:paddingTop">15px</item>
        <item name="android:paddingBottom">15px</item>
        <item name="android:textColor">#313030</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PersonalRightIconStyle">
        <item name="android:layout_width">50px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:layout_marginRight">25px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">75px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="MessageTextStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">60px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="PersonalTextStylePrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingTop">15px</item>
        <item name="android:paddingBottom">15px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>

    </style>
    <style name="PersonalTextStyle2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingTop">15px</item>
        <item name="android:paddingBottom">15px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:background">@drawable/headclick</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PersonalLineCity">
        <item name="android:background">#E6E6E6</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.5px</item>
    </style>

    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="take_code_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/code_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/code_exit_anim</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
